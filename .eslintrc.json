{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es2020": true
    },

    "extends": "eslint:recommended",

    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },

    "rules": {
        "prefer-arrow-callback": "warn",
        "no-var": "warn",

        "no-unused-vars": "warn",
        "no-undef": "warn"
    }
}
